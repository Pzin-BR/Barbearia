<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>Lista de Clientes</title>
<link href="/css/style.css" rel="stylesheet">
</head>
<body class="p-4">
<div class="container">
    <h1 class="mb-4">Clientes</h1>

    <a href="/cliente/add" class="btn add">Novo Cliente</a>

    <table class="aluno-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        <% (Cliente || []).forEach(function(item){ %>
            <tr>
                <td><%= item.nomeCliente || '' %></td>
                <td><%= item.telefoneCliente || '' %></td>
                <td><%= item.emailCliente || '' %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
