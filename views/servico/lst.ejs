<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>Lista de Serviços</title>
<link href="/css/style.css" rel="stylesheet">
</head>
<body class="p-4">
<div class="container">
    <h1 class="mb-4">Serviços</h1>

    <a href="/servico/add" class="btn add">Novo Serviço</a>

    <table class="aluno-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Duração</th>
                <th>Descrição</th>
                <th>Preço (R$)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        <% (Servico || []).forEach(function(item){ %>
            <tr>
                <td><%= item.nomeServico || '' %></td>
                <td><%= item.duracaoServico || '' %></td>
                <td><%= item.descricaoServico || '' %></td>
                <td><%= item.precoServico ? item.precoServico.toString() : '' %></td>
                <td>
                    <a class="btn edit" href="/servico/edt/<%= item._id %>">Editar</a>
                    <a class="btn delete" href="/servico/del/<%= item._id %>" onclick="return confirm('Excluir serviço?')">Excluir</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
